---
import Header from '@components/header.astro';
import Default from '@layouts/default.astro';

const wishlistItems = [
  {
    title: 'Mechanical Keyboard',
    description: 'A nice mechanical keyboard with Cherry MX switches for better typing experience.',
    links: [
      { title: 'Keychron K2', url: 'https://www.keychron.com/products/keychron-k2' },
      { title: 'Das Keyboard', url: 'https://www.daskeyboard.com/' },
    ],
  },
  {
    title: 'Standing Desk',
    description: 'An adjustable standing desk to improve posture and health while working.',
    links: [
      { title: 'Uplift Desk', url: 'https://www.upliftdesk.com/' },
      { title: 'Flexispot', url: 'https://www.flexispot.com/' },
    ],
  },
  {
    title: 'Noise-Cancelling Headphones',
    description: 'Quality headphones for focused work and enjoying music without distractions.',
    links: [
      { title: 'Sony WH-1000XM5', url: 'https://electronics.sony.com/audio/headphones/headband/p/wh1000xm5-b' },
      { title: 'Bose QuietComfort', url: 'https://www.bose.com/c/headphones/noise-cancelling-headphones' },
    ],
  },
  {
    title: 'E-Reader',
    description: 'A dedicated e-reader device for comfortable reading without screen fatigue.',
    links: [
      { title: 'Kindle Paperwhite', url: 'https://www.amazon.com/kindle-paperwhite' },
      { title: 'Kobo Libra', url: 'https://www.kobo.com/us/en/ereaders' },
    ],
  },
  {
    title: 'Indoor Plants',
    description: 'Some low-maintenance plants to bring life and freshness to the workspace.',
    links: [
      { title: 'The Sill', url: 'https://www.thesill.com/' },
      { title: 'Bloomscape', url: 'https://bloomscape.com/' },
    ],
  },
];
---

<Default>
  <Header />
  <section>
    <h2>Wishlist</h2>
    <p>A collection of things I'm hoping to get someday.</p>
  </section>
  <main>
    <ul class="wishlist">
      {
        wishlistItems.map((item) => (
          <li class="wishlist-item">
            <strong>{item.title}</strong>
            <p>{item.description}</p>
            {item.links && item.links.length > 0 && (
              <ul class="wishlist-links">
                {item.links.map((link) => (
                  <li>
                    <a href={link.url}>{link.title}</a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))
      }
    </ul>
  </main>
</Default>

<style>
  h2 {
    margin-block-end: 8px;
  }

  .wishlist {
    list-style: none;
    padding: 0;
    margin-block-start: 16px;
  }

  .wishlist-item {
    margin-block-end: 16px;
    padding-block-end: 16px;
    border-bottom: 1px solid color-mix(in srgb, currentColor 20%, transparent);
  }

  .wishlist-item:last-child {
    border-bottom: none;
    margin-block-end: 0;
    padding-block-end: 0;
  }

  .wishlist-item strong {
    display: block;
    font-weight: 500;
  }

  .wishlist-item p {
    margin-block-start: 4px;
    opacity: 0.8;
    font-size: 0.95em;
  }

  .wishlist-links {
    list-style: none;
    padding: 0;
    margin-block-start: 8px;
    display: flex;
    flex-wrap: wrap;
    gap: 8px 16px;
    font-size: 0.9em;
  }

  .wishlist-links li {
    display: inline;
  }

  .wishlist-links li::before {
    content: 'â†’ ';
    opacity: 0.5;
  }
</style>
